{
  "name": "canvas2d-wrapper",
  "version": "1.8.0",
  "description": "A React Wrapper to use HTML5 canvas with mouse move and zoom abilities.",
  "author": "Elanis",
  "license": "MIT",
  "repository": "Dysnomia-studio/canvas2d-wrapper",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint . --fix",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom --coverage",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "canvas": "^2.11.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "gh-pages": "^6.2.0",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^13.0.1",
    "postcss-preset-env": "^10.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-scripts": "^5.0.1"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-proposal-unicode-property-regex": "^7.18.6",
    "@babel/preset-react": "^7.26.3",
    "eslint-config-standard-react": "^13.0.0"
  },
  "types": "./canvas2d-wrapper.d.ts"
}
